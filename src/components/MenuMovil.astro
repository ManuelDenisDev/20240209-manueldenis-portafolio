---
import BottonAvailable from '@/components/BottonAvailable.astro';
import SocialDesktopMobile from '@/components/SocialDesktopMobile.astro';
import NavMobile from './NavMobile.astro';
---

<div class="fixed bottom-0 left-0 right-0 top-0 z-50 hidden lg:hidden" id="menuMovil">
	<div
		class="absolute top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]">
	</div>
	<header class="flex h-[5rem] items-center justify-between px-4">
		<!-- espacio para logo y menu burguer -->
	</header>
	<hr class="border-t border-white/10 shadow-lg" />
	<nav class="flex flex-col items-center">
		<NavMobile />
		<div class="flex h-[5rem] items-center">
			<BottonAvailable />
		</div>
		<div class="flex h-[5rem] items-center">
			<SocialDesktopMobile />
		</div>
	</nav>
</div>

<script>
	import {isSideMenuOpen} from '@/store/store';

	const buttonHamburguer = document.getElementById('buttonHamburguer');
	const menuMovil = document.getElementById('menuMovil');

	const handleCloseSideMenu = () => {
		isSideMenuOpen.set(false);
	};

	isSideMenuOpen.subscribe((open) => {
		if (open) {
			menuMovil.classList.remove('hidden');
		} else {
			menuMovil.classList.add('hidden');
		}
	});
</script>
